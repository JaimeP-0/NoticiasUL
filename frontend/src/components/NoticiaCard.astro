---
// Componente: Tarjeta de noticia individual
// Recibe una noticia como prop y la renderiza
const { noticia } = Astro.props;
---

<article class="noticia" data-id={noticia.id}>
	<h3>{noticia.titulo}</h3>
	<p class="autor">Por: {noticia.autor}</p>
	<p class="fecha">{noticia.fecha || 'Fecha no disponible'}</p>
	
	{noticia.imagen && (
		<img 
			src={noticia.imagen} 
			alt={noticia.titulo}
			onerror="this.style.display='none'"
		/>
	)}
	
	<div class="contenido">{noticia.contenido}</div>
</article>

