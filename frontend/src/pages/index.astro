---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<section class="mb-12 text-center">
		<h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Noticias Universitarias</h1>
		<p class="text-gray-600 dark:text-gray-400 mb-6">Bienvenido al sistema de noticias universitarias</p>
		
		<div class="flex gap-4 justify-center">
			<a href="/noticias" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors">
				Ver Noticias
			</a>
			<a href="/login" class="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-semibold rounded-lg transition-colors">
				Iniciar Sesi√≥n
			</a>
		</div>
	</section>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const user = localStorage.getItem('auth_user');
		if (user) {
			window.location.href = '/noticias';
		}
	});
</script>
